<!DOCTYPE html>
<html>
    <head>
        <title>
            Your profile
        </title>
        <!-- CSS -->
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <!-- FONTS -->
        <link href="https://fonts.googleapis.com/css?family=Poiret+One" rel="stylesheet">
        <!-- META -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body onload="addListeners3()">
        <div class="error">
                <p id='error'></p>
        </div>
        <header id="usr-page-title">
            <!-- automatically inserted -->
        </header>
        <main>
            <!-- get user display the info -->
            <div class="usr-info">
                <div id="usr-info">
                    <!-- automatically inserted -->
                </div>
                <input type="button" class="button" id="modity-btn" value="Modify profile">
                </br>
                <input type="button" class="button" id="logout-btn" value="Logout">
            </div>
            <!-- create a popup like register to modify the profile of the user and submit the changes -->
            </br>
            <div id="display-board">
                <div class="usr-boards">
                    <h2 class="usr-board-list">Your boards.</h2>
                    <div id="posted-boards">
                        <!-- automatically display boards if any -->
                    </div>
                    <div class="create-new-board">
                        <!-- add new board -->
                        <input type="text" id="board-name" placeholder="Board name">
                        <input type="button" id="new-board-btn" class="button" value="New board">
                    </div>
                </div>
            </div>
            <!-- modify profile popup -->
            <div class="pp-register">
                    <div class="pp-content">
                            <img class="pp-closing-icon" id="register-close" src="/images/closeX.png">
                            <form class="register-form" id="register-div">
                                <!-- change or modify -->
                                <h2 class="register">Change your profile</h2>

                                <div id="usr-update-pp">
                                    <!-- Automatically inserted -->
                                </div>
                                <input type="password" id="new-psw-box" name="password" placeholder="NEW PASSWORD" required>
                                <div class="form-line">
                                    <!-- chack css and change class -->
                                    <!-- not working -->
                                    <label class="login">Show password</label><input id="mod-psw-checkbox" type="checkbox">
                                </div>
                            </form>
                            <input type="submit" class="button" id="save-mod-btn" name="save-mod-btn" value="Save">
                    </div>
                </div>
        </main>
        <footer>
            <p class='footer-credits'>
                Created and Designed by a group of students. 
            </p>
            <!-- Need to add a legenda -->
        </footer>
    </body>
    <!-- SCRIPTS -->
    <script type="text/javascript" src="/scripts/script.js"></script>
    <script type="text/javascript" src="/js/fetch.js"></script>
    <script type="text/javascript" src="/dustjs-linkedin/dust-core.min.js"></script>
    <script type="text/javascript" src="/js/views.js"></script>

</html>
